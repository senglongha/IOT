<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.password">root12345</property>
		<property name="hibernate.connection.url">jdbc:mysql://127.0.0.1/spring_hsm</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>      
        <!-- <property name="current_session_context_class">thread</property> -->
		<property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>
		<property name="show_sql">true</property>
		<property name="hbm2ddl.auto">update</property>
		<mapping resource="Data.hbm.xml" />
		<mapping resource="Board.hbm.xml" />
		<mapping resource="Location.hbm.xml" />
		<mapping resource="Region.hbm.xml" />
		<mapping resource="Report.hbm.xml" />
		<mapping resource="Role.hbm.xml" />
		<mapping resource="Room.hbm.xml" />
		<mapping resource="User_Registration.hbm.xml" />
		<mapping resource="Daily_Usage.hbm.xml" />
	</session-factory>
</hibernate-configuration>
